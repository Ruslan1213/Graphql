@model IEnumerable<GraphQlLibary.Domain.Models.Post>

@{
    ViewData["Title"] = "Index";
    int i = 0;
}

<p>
    <a asp-action="Create">Create Post</a>
</p>
@foreach (var item in Model)
{
    i = i + 1;
    if (i % 3 != 0)
    {
        <div class="row m-1">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Author - @item.User.Name</h5>
                        <p class="card-text">Likes - @item.Likes</p>
                        <a asp-action="Details" asp-route-id="@item.Id">@item.Description.Substring(0, 3)...</a>
                        <br />
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <br />
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Author - @item.User.Name</h5>
                    <p class="card-text">Likes - @item.Likes</p>
                    <a asp-action="Details" asp-route-id="@item.Id">@item.Description.Substring(0, 3)...</a>
                    <br />
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    <br />
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </div>
            </div>
        </div>
    }

}